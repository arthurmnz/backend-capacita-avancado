generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto{
  id String @id @default( uuid() )
  nome String
  Preco Int
  Categoria String
  DescriÃ§Ã£o String 
  Img String  

  CarrinhoItem CarrinhoItem[]
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String 
  categorias Categoria[]
  createdAt DateTime @default(now())
}

model Categoria {
  id Int @id @default(autoincrement())
  nome String
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Carrinho {
  id     Int             @id @default(autoincrement())
  itens  CarrinhoItem[]  // relaÃ§Ã£o: 1 carrinho â†’ vÃ¡rios itens
}

model CarrinhoItem {
  id         Int      @id @default(autoincrement())
  produtoId  String   // ðŸ‘ˆ agora bate com Produto.id
  quantidade Int
  carrinhoId Int

  produto    Produto  @relation(fields: [produtoId], references: [id])
  carrinho   Carrinho @relation(fields: [carrinhoId], references: [id])
}


